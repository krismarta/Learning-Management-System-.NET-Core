@{
    ViewData["Title"] = "";

}
    <!-- slide-bar end -->
    <main>
        <!--slider-area start-->
        <section class="slider-area slider-three slider-gradient-bg pt-120">
            <img class="sl-shape shape_s13" src="~/client/img/icon/01.svg" alt="">
            <img class="sl-shape shape_01" src="~/client/img/icon/05.svg" alt="">
            <img class="sl-shape shape_02" src="~/client/img/icon/02.svg" alt="">
            <img class="sl-shape shape_03" src="~/client/img/icon/04.svg" alt="">
            <img class="sl-shape shape_04" src="~/client/img/icon/03a.svg" alt="">
            <img class="sl-shape shape_06" src="~/client/img/icon/06.svg" alt="">
            <div class="slider-blur"></div>

            <div class="main-slider">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="slider__content slider__content__03 text-center pt-10 pr-50 pl-50">
                                <h1 class="main-title mb-35 wow fadeInUp2 animated" data-wow-delay='.1s'>
                                    Learn All Course With
                                    Joanto Course
                                </h1>
                                <h5 class="mb-45 wow fadeInUp2 animated" data-wow-delay='.2s'>There are many variations of passages of Lorem Ipsum available, but the majority have suffered alteration in some form, by injected humour, or randomised words which don't look .</h5>
                                <ul class="search__area d-md-inline-flex align-items-center justify-content-between mb-30 wow fadeInUp animated" data-delay="1.5s">
                                    <li>
                                        <div class="widget__search">
                                            <form class="input-form" action="#">
                                                <input type="text" placeholder="Find Courses" readonly>
                                            </form>
                                            <button class="search-icon"><i class="far fa-search"></i></button>
                                        </div>
                                    </li>
                                    <li>
                                        <div class="widget__select">
                                            <select name="select-cat" id="select">
                                                <option value="">Categories</option>
                                                <option value="">Class One</option>
                                                <option value="">Class Two</option>
                                                <option value="">Class Three</option>
                                                <option value="">Class Four</option>
                                                <option value="">Class Five</option>
                                            </select>
                                        </div>
                                    </li>
                                    <li>
                                        <button type="button" class="theme_btn search_btn ml-35" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')">Search Now</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="slider-img-area">
                                <div class="slider-img-box-three" style="background-image: url(client/img/slider/training.jpg);">
                                    <div class="video-wrapper">
                                        <a href="https://www.youtube.com/watch?v=rdi7G1hY4-w" class="popup-video"><i class="fas fa-play"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--slider-area end-->
        <!--course-categories start-->
        <section class="course-categories pt-150 pb-115 pt-md-95 pb-md-65 pt-xs-95 pb-xs-65">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-6 col-lg-8">
                        <div class="section-title section-title-3 text-center mb-60">
                            <h2 class="mb-20">Browse our <span class="bottom-line">various categories of Online courses</span></h2>
                            <p>there are many categories available in joanto, you can browse courses based on the available categories</p>
                        </div>
                    </div>
                </div>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-3 row-cols-xl-5 gx-4 online__course__cat">
                    <div class="col">
                        <div class="courses_link mb-30 wow fadeInUp2 animated" data-wow-delay='.1s'>
                            <img class="icon-01 mb-35" src="client/img/icon/dna-color.svg" alt="">
                            <h4 class="sub-title mb-25">Science </h4>
                            <a href="javascript:void(0)" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')"><img class='arrows-icon' src="client/img/icon/arrow-right.svg" alt="arrow-right"></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="courses_link mb-30 wow fadeInUp2 animated" data-wow-delay='.2s'>
                            <img class="icon-01 mb-35" src="client/img/icon/chart-a.svg" alt="">
                            <h4 class="sub-title mb-25">Business</h4>
                            <a href="javascript:void(0)" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')"><img class='arrows-icon' src="client/img/icon/arrow-right.svg" alt="arrow-right"></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="courses_link mb-30 wow fadeInUp2 animated" data-wow-delay='.3s'>
                            <img class="icon-01 mb-35" src="client/img/icon/code-a.svg" alt="">
                            <h4 class="sub-title mb-25">Development</h4>
                            <a href="javascript:void(0)" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')"><img class='arrows-icon' src="client/img/icon/arrow-right.svg" alt="arrow-right"></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="courses_link mb-30 wow fadeInUp2 animated" data-wow-delay='.4s'>
                            <img class="icon-01 mb-35" src="client/img/icon/cube-a.svg" alt="">
                            <h4 class="sub-title mb-25">Career</h4>
                            <a href="javascript:void(0)" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')"><img class='arrows-icon' src="client/img/icon/arrow-right.svg" alt="arrow-right"></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="courses_link mb-30 wow fadeInUp2 animated" data-wow-delay='.5s'>
                            <img class="icon-01 mb-35" src="client/img/icon/design-a.svg" alt="">
                            <h4 class="sub-title mb-25">Arts & Design</h4>
                            <a href="javascript:void(0)" onclick="swal.fire('Sorry :(','this feature is not yet available','warning')"><img class='arrows-icon' src="client/img/icon/arrow-right.svg" alt="arrow-right"></a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--course-categories end-->
        
        <!-- why-chose-us start -->
        <section class="why-chose-us chose-round-bg gradient-bg pt-150 pb-120 pt-md-95 pb-md-70 pt-xs-95 pb-xs-70">
            <div class="why-chose-blur-bg"></div>
            <div class="container">
                <div class="row align-items-center mb-50">
                    <div class="col-xl-5 col-lg-12">
                        <div class="chose-wrapper mb-30">
                            <div class="section-title section-title-3 mb-30 wow fadeInUp2 animated" data-wow-delay='.1s'>
                                <h5 class="mb-25">Explore Joanto Course</h5>
                                <h2 class="mb-25">Why Choose <span class="bottom-line">Joanto Course?</span></h2>
                                <p>
                                    There are many courses available that can improve your skills
                                </p>
                            </div>
                            <ul class="text-list-box mb-40">
                                <li>
                                    <div class="single-box s-box-2 mb-30 wow fadeInUp2 animated" data-wow-delay='.2s'>
                                        <div class="single-box__icon mb-25">
                                            <span class="fas fa-2x fa-puzzle-piece text-white"></span>
                                        </div>
                                        <h4 class="sub-title mb-20">Learn New Skills</h4>
                                        <p>improve your skills by taking courses</p>
                                    </div>
                                </li>
                                <li>
                                    <div class="single-box s-box-2 mb-30 wow fadeInUp2 animated" data-wow-delay='.3s'>
                                        <div class="single-box__icon mb-25">
                                            <span class="fas fa-2x fa-book text-white"></span>
                                        </div>
                                        <h4 class="sub-title mb-20">Multiple Courses</h4>
                                        <p>very many courses available</p>
                                    </div>
                                </li>

                            </ul>
                            
                        </div>
                    </div>
                    <div class="col-xl-7 col-lg-12">
                        <div class="chose-img-wrapper-03 chose-img-full mb-30 pos-rel" style="background-image: url(assets/img/chose/06.jpg);">
                            <div class="feature tag_01">
                                <span><img src="client/img/icon/shield-check.svg" alt=""></span>
                                <h5>Anyone Can Learns</h5>
                                <p>all can increase ability without background</p>
                            </div>
                            <div class="feature tag_03">
                                <span><i class="fal fa-check"></i></span>
                                <h5>Very Cheap Course</h5>
                                <p>The price of the course is very affordable for all people</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pl-75 pr-75 pr-lg-0 pr-md-0 pr-xs-0 pl-lg-0 pl-md-0 pl-xs-0">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="counters text-center mb-30 wow fadeInUp2 animated" data-wow-delay='.1s'>
                            <h2><span class="counter">@(ViewData["userCount"])</span>+</h2>
                            <h5>Number Of Currently Registered</h5>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="counters text-center count-1 mb-30 wow fadeInUp2 animated" data-wow-delay='.5s'>
                            <h2><span class="counter">@(ViewData["courseCount"])</span>+</h2>
                            <h5>Number Of Courses Available</h5>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <div class="counters text-center count-2 mb-30 wow fadeInUp2 animated" data-wow-delay='.2s'>
                            <h2><span class="counter">@(ViewData["reviewCount"])</span>+</h2>
                            <h5>Number Of Courses Reviewed</h5>
                        </div>
                    </div>
                 
                </div>
            </div>
        </section>
        <!-- why-chose-us end -->
    </main>
    <script>
        var c = '@(ViewData["courseCount"])';
        $('#countercourse').text = c;
    </script>

   